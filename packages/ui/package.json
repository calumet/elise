{
  "name": "@elise/ui",
  "version": "0.1.0",
  "description": "Design system personalizado basado en Radix primitives y Tailwind CSS.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsup --watch --dts",
    "build": "tsup --dts",
    "lint": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "keywords": [
    "design-system",
    "radix",
    "stitches",
    "ui"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-slot": "^1.1.1",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.5.5"
  },
  "devDependencies": {
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.14",
    "tsup": "^8.3.4",
    "typescript": "^5.6.3"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "tailwindcss": "^3.4.0"
  }
}
